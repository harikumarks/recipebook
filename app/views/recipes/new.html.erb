<% provide(:title, 'Add Recipe') %>
 <%= render 'layouts/userheader' %>
 <div class="container">
  <div class="row">
    <%= render 'layouts/userleftnav' %>
    <div class="span5">

      <%= form_for(@recipe) do |f| %>

          <%= f.label :name %>
          <%= f.text_field :name %>

          <%= f.label :description %>
          <%= f.text_field :description %>

          <%= f.label :Serves %>
          <%= f.number_field :quantity %>

          <% categories=RecipeCategory.all %>
          <%= f.label :Category %>
          <%= f.select(:recipe_category_id, categories.map { |value| [ value.name, value.id ] })%>

          <%= f.hidden_field :user_id , :value => params[:user_id] %>

          <br/>

          <%= f.submit "Create recipe" %>
      <% end %>
      <%= link_to 'Back', recipes_path %>

    </div>
  </div>
</div>

