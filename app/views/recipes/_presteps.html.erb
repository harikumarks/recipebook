<div id="presteps">
  <% if @presteps.count > 0 %>
      <table class="table table-striped"  >
        <thead>

        <tr>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @presteps.order(:sequence).each do |prestep| %>
            <tr>
              <td><%= prestep.sequence %></td>
              <td><%= prestep.activity %> </td>
              <td> <%=  prestep.time.to_s + " minutes " %></td>
              <td>  <%= link_to image_tag("edit.png"), edit_prestep_path(prestep,:recipe_id => @recipe.id) %> </td>
              <td> <%= link_to image_tag("delete.png"), prestep, method: :delete, data: { confirm: 'Are you sure?' } %>    </td>


        <%end %>
        </tbody>
      </table>
  <%end%>
</div>
