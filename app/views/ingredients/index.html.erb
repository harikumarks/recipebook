<% provide(:title, 'Ingredients') %>
<%= render 'layouts/userheader' %>
<div class="container">
  <div class="row">
    <%= render 'layouts/userleftnav' %>
    <div class="span5">
      <b>Ingredients</b>
      <table class="table table-striped">
        <thead>
        <tr>
          <th>Name</th>
          <th>Unit</th>
          <th>Category</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
        </thead>
        <tbody>

        <% @ingredients.each do |ingredient| %>
            <tr>
              <td><%= ingredient.name %></td>
              <td><%= ingredient.unit %></td>
              <% @catname=@ingredient_categories.where(id: ingredient.ingredient_category_id).first%>
              <% if @catname %>
              <td><%=  @catname.name %></td>
              <%end%>
              <td><%= link_to image_tag('edit.png'), edit_ingredient_path(ingredient) %></td>
              <td><%= link_to image_tag('delete.png'), ingredient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>

      </tbody>
      </table>
      <%= will_paginate %>
      <br />

      <%= link_to " Add new  #{image_tag('go.png')}".html_safe, new_ingredient_path %>
    </div>
  </div>
</div>
