<%= form_for(@step) do |f| %>
  <% if @step.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@step.errors.count, "error") %> prohibited this step from being saved:</h2>

      <ul>
      <% @step.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :sequence %><br />
    <%= f.number_field :sequence ,in: 1...1000 %>
  </div>
  <div class="field">
    <%= f.label :activity %><br />
    <%= f.text_field :activity %>
  </div>
  <div class="field">
    <%= f.label :time %><br />
    <%= f.number_field :time , in: 1...3000 %>
  </div>
    <%= f.hidden_field :recipe_id , :value => params[:recipe_id] %>
  <div class="actions">
    <%= f.submit tag="Save" %>
  </div>
   <%= link_to 'Back', recipe_path(params[:recipe_id]) %>
<% end %>
